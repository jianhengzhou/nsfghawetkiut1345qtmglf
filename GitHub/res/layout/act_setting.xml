<?xml version="1.0" encoding="utf-8"?>
<com.gdestiny.github.ui.view.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    style="@style/scrollbar_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/icon_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_user_background" >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin16"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin16"
            android:background="@drawable/drawable_border_blue"
            android:orientation="vertical" >

            <TextView
                style="@style/settingText_style"
                android:text="@string/account" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="@dimen/margin8"
                android:layout_marginRight="@dimen/margin8"
                android:background="#dddddd" />

            <TextView
                style="@style/settingText_style"
                android:text="@string/start_up" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="@dimen/margin8"
                android:layout_marginRight="@dimen/margin8"
                android:background="#dddddd" />

            <TextView
                style="@style/settingText_style"
                android:text="@string/delete_cache" />
        </LinearLayout>

        <include layout="@layout/layout_about" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1000dp" />
    </LinearLayout>

</com.gdestiny.github.ui.view.ObservableScrollView>