<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_milestone"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/selected"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="@dimen/margin16"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:visibility="gone"
        android:contentDescription="@string/app_name"
        android:src="@drawable/common_check" />

    <TextView
        android:id="@+id/milestone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin16"
        android:layout_marginRight="@dimen/margin16"
        android:layout_marginTop="@dimen/margin8"
        android:layout_toRightOf="@id/selected"
        android:textColor="@color/common_light_black"
        android:textSize="@dimen/text18" />

    <TextView
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/milestone_title"
        android:layout_marginBottom="@dimen/margin2"
        android:layout_marginLeft="@dimen/margin16"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginTop="@dimen/margin2"
        android:layout_toRightOf="@id/selected"
        android:drawableLeft="@drawable/common_state_open"
        android:gravity="center_vertical"
        android:textColor="@color/common_icon_grey"
        android:textSize="@dimen/text14" />

    <TextView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/milestone_title"
        android:layout_marginBottom="@dimen/margin2"
        android:layout_marginRight="@dimen/margin16"
        android:layout_marginTop="@dimen/margin2"
        android:layout_toRightOf="@id/open"
        android:drawableLeft="@drawable/common_state_close"
        android:gravity="center_vertical"
        android:textColor="@color/common_icon_grey"
        android:textSize="@dimen/text14" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/open"
        android:layout_marginBottom="@dimen/margin2"
        android:layout_marginLeft="@dimen/margin16"
        android:layout_marginRight="@dimen/margin16"
        android:layout_toRightOf="@id/selected"
        android:background="@drawable/drawable_corner_ligth_blue"
        android:ellipsize="end"
        android:maxLines="3"
        android:padding="@dimen/margin8"
        android:textColor="@color/common_icon_grey"
        android:textSize="@dimen/text16"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/milestone_icon"
        style="@style/image_with_frame"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_below="@id/description"
        android:layout_marginBottom="@dimen/margin2"
        android:layout_marginLeft="@dimen/margin16"
        android:layout_toRightOf="@id/selected"
        android:background="@drawable/common_image_bg"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/milestone_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginBottom="@dimen/margin2"
        android:layout_marginLeft="@dimen/margin8"
        android:layout_marginRight="@dimen/margin16"
        android:layout_toRightOf="@id/milestone_icon"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/common_icon_grey"
        android:textSize="@dimen/text12" />

    <TextView
        android:id="@+id/milestone_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/milestone_icon"
        android:layout_marginBottom="@dimen/margin8"
        android:layout_marginLeft="@dimen/margin16"
        android:layout_marginRight="@dimen/margin16"
        android:textColor="@color/common_icon_grey"
        android:textSize="@dimen/text10" />

</RelativeLayout>