<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/repository_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin16"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/common_repository_pressed" />

    <TextView
        android:id="@+id/repository_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin16"
        android:layout_marginTop="@dimen/margin8"
        android:layout_toRightOf="@id/repository_icon"
        android:textSize="@dimen/text22" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repository_name"
        android:layout_marginBottom="@dimen/margin8"
        android:layout_toRightOf="@id/repository_icon"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/repository_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin16"
            android:text="Java"
            android:textColor="#a9b7b7"
            android:textSize="@dimen/text14" />

        <TextView
            android:id="@+id/repository_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin16"
            android:drawableLeft="@drawable/little_star"
            android:text="18"
            android:textColor="#a9b7b7"
            android:textSize="@dimen/text14" />

        <TextView
            android:id="@+id/repository_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin16"
            android:drawableLeft="@drawable/little_pull"
            android:text="15"
            android:textColor="#a9b7b7"
            android:textSize="@dimen/text14" />
    </LinearLayout>

</RelativeLayout>