<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
    <ImageView
        android:id="@+id/repository_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin16"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/common_repository_item" />

    <TextView
        android:id="@+id/repository_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin16"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin16"
        android:layout_marginTop="@dimen/margin4"
        android:layout_toRightOf="@id/repository_icon"
        android:textColor="@color/common_light_black"
        android:textSize="@dimen/text18" />

    <TextView
        android:id="@+id/repository_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repository_name"
        android:layout_marginLeft="@dimen/margin16"
        android:layout_toRightOf="@id/repository_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginRight="@dimen/margin16"
        android:textColor="@color/common_light_grey"
        android:textSize="@dimen/text16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repository_description"
        android:layout_marginBottom="@dimen/margin4"
        android:layout_toRightOf="@id/repository_icon"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/repository_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin16"
            android:textColor="@color/common_icon_grey"
            android:textSize="@dimen/text14" />

        <TextView
            android:id="@+id/repository_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin16"
            android:drawableLeft="@drawable/little_star"
            android:textColor="@color/common_icon_grey"
            android:textSize="@dimen/text14" />

        <TextView
            android:id="@+id/repository_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin16"
            android:drawableLeft="@drawable/little_pull"
            android:textColor="@color/common_icon_grey"
            android:textSize="@dimen/text14" />
    </LinearLayout>

</RelativeLayout>