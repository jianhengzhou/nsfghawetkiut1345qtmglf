<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/item_repo_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/repository_icon"
            style="@style/image_with_frame"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginTop="@dimen/margin16"
            android:background="@drawable/common_image_bg"
            android:contentDescription="@string/app_name"
            android:src="@drawable/common_repository_item" />

        <TextView
            android:id="@+id/repository_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginTop="@dimen/margin4"
            android:layout_toRightOf="@id/repository_icon"
            android:textColor="@color/common_light_black"
            android:textSize="@dimen/text18" />

        <TextView
            android:id="@+id/repository_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/repository_name"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_toRightOf="@id/repository_icon"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/common_light_grey"
            android:textSize="@dimen/text16" />

        <TextView
            android:id="@+id/repository_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/repository_description"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_toRightOf="@id/repository_icon"
            android:drawableLeft="@drawable/little_people"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/common_light_grey"
            android:textSize="@dimen/text16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/repository_owner"
            android:layout_marginBottom="@dimen/margin4"
            android:layout_toRightOf="@id/repository_icon"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/repository_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin16"
                android:textColor="@color/common_icon_grey"
                android:textSize="@dimen/text14" />

            <TextView
                android:id="@+id/repository_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin16"
                android:drawableLeft="@drawable/little_star"
                android:textColor="@color/common_icon_grey"
                android:textSize="@dimen/text14" />

            <TextView
                android:id="@+id/repository_pull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin16"
                android:drawableLeft="@drawable/little_pull"
                android:textColor="@color/common_icon_grey"
                android:textSize="@dimen/text14" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_repo_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#88a9b7b7"
        android:gravity="left|center_vertical"
        android:paddingBottom="@dimen/margin8"
        android:paddingLeft="@dimen/margin32"
        android:paddingTop="@dimen/margin8"
        android:textColor="@color/white"
        android:textSize="@dimen/text22" />

</RelativeLayout>