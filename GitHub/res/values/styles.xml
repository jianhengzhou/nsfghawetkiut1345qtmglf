<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.Sherlock.Light">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="editText_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/selector_common_edtitext_background</item>
    </style>

    <style name="progressbar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_circle</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="common_menu_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">@dimen/margin4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/margin8</item>
        <item name="android:paddingBottom">@dimen/margin8</item>
        <item name="android:paddingLeft">@dimen/margin8</item>
        <item name="android:textColor">@drawable/selector_common_menu_text</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_common_menu_item</item>
    </style>

</resources>